<div class="row">
  <div class="col-sm-8 col-md-8">
    <div class="row">
      <div class="col-sm-3 col-md-3">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "span12" %>
      </div>

      <div class="col-sm-3 col-md-3">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "span12" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3 col-md-3">
        <%= f.label :number, "Card Number" %>
        <%= f.text_field :number, autocomplete: "off", class: "span12" %>
      </div>

      <div class="col-sm-2 col-md-2">
        <%= f.label :verification_value, "CVV" %>
        <%= f.text_field :verification_value, autocomplete: "off", class: "span12" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3 col-md-3">
        <%= f.label :month, "Expiration" %>
        <%= f.text_field :month, placeholder: "Month", class: "span12" %>
      </div>
      <div class="col-sm-2 col-md-2">
        <%= f.label :year, "&nbsp;".html_safe %>
        <%= f.text_field :year, placeholder: "Year", class: "span12" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-2 col-md-2">
        <%= label_tag "credit_card_how_many", "# of Phasers" %>
        <%= text_field_tag "data[how_many]", @credit_card.how_many, :id => "credit_card_how_many", class: "span12" %>
      </div>
    </div>
  </div>
</div>
